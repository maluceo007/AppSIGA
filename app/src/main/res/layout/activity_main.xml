<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/gradient"
    android:layout_height="match_parent"

    tools:context="siga.appsiga.MainActivity">

    <SeekBar
        android:id="@+id/seekLed2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="19dp"
        android:max="255"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/btnLed1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnLed2"
        android:layout_marginStart="8dp" />

    <SeekBar
        android:id="@+id/seekLed1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="22dp"
        android:max="255"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/btnLed1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnLed1"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/btnLed1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/white_light_off"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnLed2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/blue_light_off"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLed1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/darker_gray"
        android:text="Waiting..."
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/textFeed" />

    <TextView
        android:id="@+id/textTemp"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="50sp"
        android:typeface="normal"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textMax"
        app:layout_constraintHorizontal_bias="0.4" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="33dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLed2"
        app:srcCompat="@drawable/termometro"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textMin"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="118dp"
        android:text="MIN"
        android:textColor="#FF4081"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textTemp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textMax"
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="106dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:text="MAX"
        android:textAlignment="viewEnd"
        android:textColor="#FF4081"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textMin" />

    <TextView
        android:id="@+id/textFeed"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/circle"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textDspMin"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textViewLastFeeding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:text="Last Feeding"
        android:textAlignment="center"
        android:textColor="?attr/colorControlNormal"
        android:textSize="20sp"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintLeft_toLeftOf="@+id/textFeed"
        app:layout_constraintRight_toRightOf="@+id/textFeed"
        app:layout_constraintTop_toTopOf="@+id/textFeed" />

    <TextView
        android:id="@+id/textLastFeed"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:text="8:30"
        android:textAlignment="center"
        android:textSize="17sp"
        app:layout_constraintHorizontal_bias="0.541"
        app:layout_constraintLeft_toLeftOf="@+id/textFeed"
        app:layout_constraintRight_toRightOf="@+id/textFeed"
        app:layout_constraintTop_toBottomOf="@+id/textViewLastFeeding" />

    <TextView
        android:id="@+id/textDspMin"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="0dp"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:gravity="center"
        app:layout_constraintRight_toLeftOf="@+id/textDspMax"
        app:layout_constraintTop_toBottomOf="@+id/textMin"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:gravity="center"
        android:id="@+id/textDspMax"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="106dp"
        android:layout_marginTop="0dp"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        app:layout_constraintBottom_toBottomOf="@+id/textDspMin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textMax"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnFeeder"
        android:layout_width="199dp"
        android:layout_height="198dp"
        android:background="@android:color/transparent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textDspMin"
        app:layout_constraintHorizontal_bias="0.502" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="107dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/feedme"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/btnFeeder"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/textFeed"
        android:layout_marginTop="84dp"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintTop_toTopOf="@+id/btnFeeder" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="102dp"
        android:layout_height="23dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:text="Feed Me"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintLeft_toLeftOf="@+id/btnFeeder"
        app:layout_constraintRight_toRightOf="@+id/btnFeeder"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        tools:layout_editor_absoluteX="135dp" />


</android.support.constraint.ConstraintLayout>
